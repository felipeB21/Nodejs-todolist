<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/head') %>
  <body>
    <%- include ('./partials/header') %>
    <div class="w-form">
      <div>
        <div><p>Sign up to create your todo list!</p></div>
        <div>
          <form action="/register" method="post">
            <label for="name">Name</label>
            <input type="text" name="name" placeholder="Your name" />
            <% if (errors && errors.name) { %>
            <p class="error-msg"><%= errors.name.msg %></p>
            <% } %>
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="Your email" />
            <% if (errors && errors.email) { %>
            <p class="error-msg"><%= errors.email.msg %></p>
            <% } %>
            <label for="password">Password</label>
            <input
              type="password"
              name="password"
              placeholder="Your password"
            />
            <% if (errors && errors.password) { %>
            <p class="error-msg"><%= errors.password.msg %></p>
            <% } %>
            <label for="confirmPassword">Confirm password</label>
            <input
              type="password"
              name="confirmPassword"
              placeholder="Confirm your password"
            />
            <% if (errors && errors.confirmPassword) { %>
            <p class="error-msg"><%= errors.confirmPassword.msg %></p>
            <% } %>
            <button type="submit">Sign up</button>
          </form>
        </div>
        <div class="no-acces">
          <p class="text-gray">You have an account?</p>
          <p><a class="text-sky" href="/login">Sign in</a> now!</p>
        </div>
      </div>
    </div>
  </body>
</html>
