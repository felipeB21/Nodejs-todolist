<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/head') %>
  <body>
    <%- include ('./partials/header') %>
    <div class="b-width">
      <div class="mt-20">
        <div class="bg-form">
          <form action="/edit-todo/<%= todoById.id %>" method="post">
            <label for="title">Title:</label>
            <input type="text" name="title" value="<%= todoById.title || ""%>"/>
            <label for="text">ToDo:</label>
            <textarea name="text" cols="30" rows="10">
<%= todoById.text %></textarea
            >
            <button>Submit</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
